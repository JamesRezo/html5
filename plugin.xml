	</description>
	<auteur>davux</auteur>
	<auteur>[tetue->http://spip.tetue.net]</auteur>
	<licence>GNU/GPL, WTFPL</licence>
	<lien>https://contrib.spip.net/html5</lien>

	<options>html5_options.php</options>

	<pipeline>
		<nom>insert_head_css</nom>
		<action>insert_head_css</action>
		<inclure>html5_pipelines.php</inclure>
	</pipeline>

	<necessite id="SPIP" version="[2.0.0;3.2.99]">
	<necessite id="figure" version="[1.0.1;]">
</plugin>